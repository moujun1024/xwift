// MARK: - 示例 7: 表单示例

func formExample() {
    let nameField = TextField("Name")
    let emailField = TextField("Email")
    let phoneField = TextField("Phone")
    
    let content = VStack(spacing: 15) {
        Text("Registration Form")
            .fontSize(.ExtraLarge)
            .foregroundColor(.Blue)
            .alignment(.Center)
        
        VStack(spacing: 5) {
            Text("Name:")
                .fontSize(.Medium)
            nameField
                .padding(5)
        }
        
        VStack(spacing: 5) {
            Text("Email:")
                .fontSize(.Medium)
            emailField
                .padding(5)
        }
        
        VStack(spacing: 5) {
            Text("Phone:")
                .fontSize(.Medium)
            phoneField
                .padding(5)
        }
        
        HStack(spacing: 10) {
            Button("Submit") {
                print("Name: " + nameField.text)
                print("Email: " + emailField.text)
                print("Phone: " + phoneField.text)
            }
            .backgroundColor(.Blue)
            .foregroundColor(.White)
            
            Button("Clear") {
                nameField.text = ""
                emailField.text = ""
                phoneField.text = ""
            }
            .backgroundColor(.Gray)
            .foregroundColor(.White)
        }
    }
    .padding(30)
    
    let window = Window()
    window.setTitle("Registration Form")
    window.setSize(width: 450, height: 400)
    window.setContent(content)
    
    let app = Application.shared
    app.setMainWindow(window)
    app.run()
}

// MARK: - 示例 8: 选项卡界面

func tabbedInterface() {
    var currentTab = 0
    
    let tabContent = VStack {
        Text("Tab 1 Content")
            .fontSize(.Large)
    }
    
    let content = VStack(spacing: 10) {
        HStack(spacing: 5) {
            Button("Tab 1") {
                currentTab = 1
                tabContent.children = [Text("Tab 1 Content").fontSize(.Large)]
            }
            .backgroundColor(currentTab == 1 ? .Blue : .Gray)
            .foregroundColor(.White)
            
            Button("Tab 2") {
                currentTab = 2
                tabContent.children = [Text("Tab 2 Content").fontSize(.Large)]
            }
            .backgroundColor(currentTab == 2 ? .Blue : .Gray)
            .foregroundColor(.White)
            
            Button("Tab 3") {
                currentTab = 3
                tabContent.children = [Text("Tab 3 Content").fontSize(.Large)]
            }
            .backgroundColor(currentTab == 3 ? .Blue : .Gray)
            .foregroundColor(.White)
        }
        
        tabContent
            .padding(20)
    }
    .padding(10)
    
    let window = Window()
    window.setTitle("Tabbed Interface")
    window.setSize(width: 500, height: 350)
    window.setContent(content)
    
    let app = Application.shared
    app.setMainWindow(window)
    app.run()
}

